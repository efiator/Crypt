<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffffff">


    <Button
        android:id="@+id/des"
        android:text="DES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:textColor="#3d0a0a"
        android:layout_below="@+id/affine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Welcome to Crypt!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/des" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Affine"
        android:id="@+id/affine"
        android:onClick="affine"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift"
        android:id="@+id/button"
        android:onClick="shift"
        android:layout_above="@+id/des"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select the cipher you would like to use today!"
        android:id="@+id/textView2"
        android:layout_above="@+id/affine"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="80dp" />


</RelativeLayout>
